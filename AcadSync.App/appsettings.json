{
  "ConnectionStrings": {
    "AnthologyStudent": "Server=localhost;Database=AnthologyStudent;Integrated Security=true;TrustServerCertificate=true;",
    "AcadSyncAudit": "Server=localhost;Database=AcadSyncAudit2;Integrated Security=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "AcadSync": "Debug"
    }
  },
  "AcadSync": {
    "DefaultStaffId": 1,
    "MaxConcurrentOperations": 10,
    "EnableAuditLogging": true,
    "RulesFile": "rules.yaml",
    "AuditRetentionDays": 365,
    "UseReadUncommitted": true,
    "AutoInitializeDatabase": true
  }
}
